<h1>My current chats:</h1>
<ul>
  <% @chats.each do |chat| %>
    <% if chat.personal %>
      <% receiver = chat.users.find{|user| user != current_user} %>
      <li> <strong><%= "UNREAD" if chat.chat_users.where(user: current_user)[0].unread? %></strong> <%= link_to "#{receiver.name} (Private Message)", chat_path(chat) %> </li>
    <% else %>
      <li> <strong><%= "UNREAD" if chat.chat_users.where(user: current_user)[0].unread? %></strong> <%= link_to chat.name, chat_path(chat) %> with <% chat.users.reject do |user| user == current_user end.each do |user| %>
          /<%= (link_to user.name, user_path(user)) %>/
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
