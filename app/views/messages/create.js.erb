
  <% publish_to chat_path(@message.chat) do%>
    var message = '<div class="message user-<%= @message.sender.id %>"><div class="small-text"><strong><%=link_to @message.sender.name, user_path(@message.sender)%></strong> <%= @message.created_at.strftime("%b%e,%l:%M %p") %><br></div><%= @message.content %></div>';
    $('.chat-box').append(message);
  <% end %>


